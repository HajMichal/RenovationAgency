datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int @default(autoincrement()) @unique
  name      String
  email     String  @unique
  phone     String  @unique
  address    String
  password  String
  createdat DateTime @default(now())

  contractor Contractor?
  building  Building[]
}

model Contractor {
  id               Int       @default(autoincrement()) @unique
  companyName      String
  companyEmail     String   @unique
  companyPhone     String   @unique
  companyAddress    String
  nip              String?  @unique
  createdat        DateTime @default(now())

  userId           Int       @unique
  user             User      @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  booking          Booking[]
}

model Building {
  id            Int    @default(autoincrement()) @unique
  title         String
  address       String
  city          String
  zipcode       String
  description   String  @db.LongText
  estimatedCost String
  estimatedArea String
  // images ??  
  
  userId        Int
  user          User    @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  booking       Booking?
}

model Booking {
  id            Int         @default(autoincrement()) @unique
  deadline      DateTime

  buildingId    Int         @unique
  building      Building    @relation(fields: [buildingId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  contractorId  Int? 
  contractor    Contractor?  @relation(fields: [contractorId], references: [id], onDelete: Cascade, onUpdate: Cascade)
}
